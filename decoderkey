<body>

    <h1>Decodificador de Links de Afiliação</h1>

    <p>Cole abaixo a URL completa que contém o parâmetro <strong>key</strong>:</p>

    <textarea id="inputUrl" rows="3" placeholder="Cole o link aqui..."></textarea>

    <button onclick="decode()">Decodificar</button>

    <h2>Resultado:</h2>
    <pre id="output"></pre>

<script>
function decode() {
    const output = document.getElementById("output");
    output.textContent = "";

    try {
        const url = document.getElementById("inputUrl").value.trim();
        const params = new URL(url).searchParams;

        if (!params.has("key")) {
            output.textContent = "Erro: a URL não contém o parâmetro 'key'.";
            return;
        }

        // Extrair e decodificar
        const encoded = params.get("key");
        const urlDecoded = decodeURIComponent(encoded);
        const base64decoded = atob(urlDecoded);

        // Transformar em pares key=value
        const pairs = base64decoded.split("&").map(p => p.split("="));

        const paramObj = {};
        pairs.forEach(([k, v]) => paramObj[k] = v);

        // Exibir resultado final
        output.textContent =
            "String decodificada:\n" + base64decoded + "\n\n" +
            "Parâmetros interpretados:\n" +
            JSON.stringify(paramObj, null, 4);

    } catch (err) {
        output.textContent = "Erro ao decodificar: " + err.message;
    }
}
</script>

</body>
